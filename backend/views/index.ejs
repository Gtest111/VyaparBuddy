<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <!-- Include Navbar -->
    <%- include("partials/navbar") %>

    <div class="container mt-4">
        <h1 class="text-center">Welcome to SmartAdMate</h1>

        <!-- Schedule Post Form -->
        <div class="card mt-4">
            <div class="card-body">
                <h3 class="card-title">Schedule a Post</h3>
                <form action="/schedule" method="POST">
                    <div class="mb-3">
                        <input type="text" name="postContent" class="form-control" placeholder="Enter your post" required>
                    </div>
                    <div class="mb-3">
                        <input type="datetime-local" name="scheduleTime" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Schedule Post</button>
                </form>
            </div>
        </div>

        <!-- Scheduled Posts -->
        <h2 class="mt-4">Scheduled Posts</h2>
        <ul class="list-group">
            <% posts.forEach((post) => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong><%= post.postContent %></strong> - <%= post.scheduleTime.toLocaleString() %>
                    </div>
                    <div>
                        <!-- Edit Button -->
                        <a href="/edit/<%= post._id %>" class="btn btn-warning btn-sm">‚úèÔ∏è Edit</a>
                        <!-- Delete Button -->
                        <form action="/delete/<%= post._id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è Delete</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>

    <!-- Bootstrap JS (optional, for better UI interactions) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
